<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/strengthImage"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:layout_margin="6dp"
        android:src="@drawable/com_facebook_button_icon"/>

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/strengthBar"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="40"
        app:rcProgressColor="@color/strengthBarProg"
        app:rcBackgroundColor="@color/strengthBarBg"
        app:rcProgress="50"
        app:rcBackgroundPadding="4dp"
        app:rcMax="100" />

    <ImageView
        android:id="@+id/expandImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="28dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:src="@drawable/collabsed_menu" />

</LinearLayout>