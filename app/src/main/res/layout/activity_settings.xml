<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Settings"
    android:id="@+id/relativeLayout2">
    tools:context=".activities.Settings">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/settings_bg"
        android:hapticFeedbackEnabled="true"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Switch
            android:id="@+id/localpoliticiansswitch"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginEnd="29dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:checked="false"
            android:text="Limit politicians to your area"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:checked="false" />

        <Switch
            android:id="@+id/switch4"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:text="Switch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/localpoliticiansswitch" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginEnd="29dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:text="Switch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch4" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_bg"
            android:gravity="left|center_vertical"
            android:onClick="resetMatches"
            android:paddingLeft="30dp"
            android:text="@string/reset"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/button_bg"
            android:gravity="left|center_vertical"
            android:onClick="logout"
            android:paddingLeft="30dp"
            android:text="@string/logout"
            android:textAllCaps="false" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>